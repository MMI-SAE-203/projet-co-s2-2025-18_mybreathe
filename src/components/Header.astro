---
import logo from '../assets/icones/logo.svg?url';
---

<header class="flex items-center justify-between p-4 text-white">
    <div>
        <a href="/accueil">
            <img
                src={logo}
                alt="Logo 2BeBetter"
                class="h-20 w-auto"
            />
        </a>
    </div>

    <div class="flex items-center gap-4 lg:hidden">
        <a href="/connexion" aria-label="Connexion">
            <img src="/src/assets/icones/connexion.svg" alt="Icone Connexion" />
        </a>

        <button
            id="menu-btn"
            class="group relative z-20 flex h-3 w-6 flex-col justify-between *:block *:ease *:h-0.5 *:w-full *:transform *:rounded-full *:bg-white *:transition *:duration-300"
            aria-label="Menu"
            aria-controls="menu"
            aria-expanded="false"
        >
            <span
                class="group-aria-expanded:translate-y-[5px] group-aria-expanded:rotate-45"
            ></span>
            <span
                class="group-aria-expanded:-translate-y-[5px] group-aria-expanded:-rotate-45"
            ></span>
        </button>
    </div>

    <!-- Menu mobile full-screen -->
    <nav
        id="menu"
        class="fixed top-0 right-0 z-10 h-screen w-full bg-[#2B1737] px-6 py-12 transform translate-x-full transition-transform duration-500 ease-in-out flex flex-col justify-between lg:static lg:translate-x-0 lg:transition-none lg:h-auto lg:w-auto lg:bg-transparent lg:py-6 lg:flex-row"
        aria-hidden="true"
    >
        <ul
            class="flex flex-col gap-6 text-2xl lg:flex-row lg:gap-4 lg:text-lg"
        >
            <li>
                <a
                    class="block p-4 rounded-lg text-white lg:hover:text-[#FCB2D8] lg:hover:underline transition-all"
                    href="/moodtracker">Moodtracker</a>
            </li>
            <li>
                <a
                    class="block p-4 rounded-lg text-white lg:hover:text-[#FCB2D8] lg:hover:underline transition-all"
                    href="/urgence">Urgence</a>
            </li>
            <li>
                <a
                    class="block p-4 rounded-lg text-white lg:hover:text-[#FCB2D8] lg:hover:underline transition-all"
                    href="/detente">Coin détente</a>
            </li>
            <li>
                <a
                    class="block p-4 rounded-lg text-white lg:hover:text-[#FCB2D8] lg:hover:underline transition-all"
                    href="/temoignages">Témoignages</a>
            </li>
            <li>
                <a
                    class="block p-4 rounded-lg text-white lg:hover:text-[#FCB2D8] lg:hover:underline transition-all"
                    href="/connexion">Connexion</a>
            </li>
        </ul>
    </nav>
</header>

<style>
    .noscroll {
        overflow: hidden;
    }
</style>

<script>
    const toggle = document.querySelector("#menu-btn");
    const nav = document.querySelector("#menu");
    const page = document.body;

    if (toggle && nav) {
        toggle.addEventListener("click", () => {
            const isOpen = toggle.getAttribute("aria-expanded") === "true";
            toggle.setAttribute("aria-expanded", String(!isOpen));
            nav.setAttribute("aria-hidden", String(isOpen));

            if (!isOpen) {
                nav.classList.remove("translate-x-full");
                nav.classList.add("translate-x-0");
                page.classList.add("noscroll");
            } else {
                nav.classList.add("translate-x-full");
                nav.classList.remove("translate-x-0");
                page.classList.remove("noscroll");
            }
        });
    }
</script>
