<div class="overflow-x-auto whitespace-nowrap px-6 py-10">
    <div class="inline-flex gap-6">
        {
            [
                {
                    title: " Respiration consciente (1-2 min)",
                    description:
                        "Idéal pour calmer rapidement le système nerveux.",
                    details: `Inspirez profondément par le nez en comptant jusqu'à 3.
                  Retenez votre souffle 3 secondes.
                  Expirez lentement par la bouche en comptant jusqu'à 6.
                  Répétez pendant 1 à 2 minutes jusqu'à ressentir un apaisement.`,
                },
                {
                    title: "Relaxation profonde",
                    description: "Une méthode pour libérer les tensions.",
                    details: `Fermez les yeux et imaginez-vous dans un lieu calme.
                  Respirez profondément et relâchez toute tension à chaque expiration.`,
                },
                {
                    title: "Méthode de concentration",
                    description: "Parfaite pour améliorer la concentration.",
                    details: `Concentrez-vous sur un objet ou une image et respirez profondément.
                  Maintenez cette attention pendant quelques minutes.`,
                },
                {
                    title: "Équilibre énergétique",
                    description: "Idéal pour rétablir l’équilibre intérieur.",
                    details: `Visualisez une lumière qui circule dans votre corps.
                  Respirez profondément et imaginez l’énergie se déplacer à travers vous.`,
                },
                {
                    title: "Méditation guidée",
                    description:
                        "Suivez les instructions pour entrer en méditation.",
                    details: `Asseyez-vous confortablement et concentrez-vous sur votre respiration.
                  Suivez les étapes pour entrer dans un état de relaxation profonde.`,
                },
            ].map((card, index) => (
                <div
                    key={index}
                    class="flip-card w-[300px] h-[400px] inline-block"
                >
                    <div class="flip-card-inner w-full h-full relative">
                        <div class="flip-card-front absolute w-full h-full rounded-2xl overflow-hidden backface-hidden shadow-xl">
                            <div class="absolute top-0 left-0 bg-[#7096D1] p-6 w-full h-full flex flex-col justify-center overflow-hidden">
                                <p class="text-5xl">{index + 1}</p>
                                <h2 class="text-2xl font-bold text-ellipsis overflow-hidden whitespace-nowrap">
                                    {card.title}
                                </h2>
                            </div>
                        </div>

                        <div class="flip-card-back absolute w-full h-full rounded-2xl px-5 bg-[#7096D1] text-center flex items-center justify-center backface-hidden rotate-y-180 shadow-xl overflow-hidden">
                            <p class="text-lg text-ellipsis overflow-hidden whitespace-normal">
                                {card.details}
                            </p>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</div>

<style is:global>
    .flip-card {
        perspective: 1000px;
    }

    .flip-card-inner {
        transition: transform 0.8s;
        transform-style: preserve-3d;
        position: relative;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front,
    .flip-card-back {
        backface-visibility: hidden;
    }

    .flip-card-back {
        transform: rotateY(180deg);
    }

    .text-ellipsis {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .whitespace-normal {
        white-space: normal;
    }
</style>
